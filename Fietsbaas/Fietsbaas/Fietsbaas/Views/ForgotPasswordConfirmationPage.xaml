<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fietsbaas.Views.ForgotPasswordConfirmationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Your confirmation email to reset your password has been sent!"
                FontSize="20" Margin="40,0,0,0"
               VerticalOptions="CenterAndExpand"/>

            <StackLayout>
                <Button Text="Back to LoginPage" Clicked="BacktoLoginButton_Clicked" FontSize="20"
                    Margin="0,0,0,0"/>
            </StackLayout>

        </StackLayout>

      
    </ContentPage.Content>
    
    
        
</ContentPage>